# Make gpg-agent ask for passphrase in the same terminal in which the ssh command was run
Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"

# Lovelace VM
# Connects to UFRGS VPN
Host lovelace-vm
    Hostname lovelace-vm.local
    User evf
    ForwardAgent yes
    AddKeysToAgent yes
    ServerAliveInterval 240

# My personal computer at IF-UFRGS
Host if-ufrgs
    Hostname 143.54.45.50
    User evf
    ProxyJump lovelace-vm.local
    ForwardAgent yes
    AddKeysToAgent yes
    ServerAliveInterval 240

# LIEF
Host lief
    Hostname lief.if.ufrgs.br
    User eliseuvf
    ProxyJump lovelace-vm.local
    ForwardAgent yes
    AddKeysToAgent yes
    ServerAliveInterval 240

# Ada Lovelace cluster
Host lovelace
    Hostname lovelace.if.ufrgs.br
    User eliseuvf
    ProxyJump lovelace-vm.local
    ForwardAgent yes
    AddKeysToAgent yes
    ServerAliveInterval 240

# Ada Lovelace cluster
Host ada
    Hostname ada.if.ufrgs.br
    User eliseuvf
    ProxyJump lovelace-vm.local
    ForwardAgent yes
    AddKeysToAgent yes
    ServerAliveInterval 240
