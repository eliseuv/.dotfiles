#!/usr/bin/env bash

SINK_NUM=$(pactl list sinks short | sed -e 's,^\([0-9][0-9]*\)[^0-9].*,\1,' | head -n 1)
MUTE_STATUS=$(pactl list sinks | grep '^[[:space:]]Mute:' | awk 'NR == $SINK_NUM+1' | sed -e 's,[[:space:]]\+Mute: \([a-z]\+\)$,\1,')
VOLUME=$(pactl list sinks | grep '^[[:space:]]Volume:' | awk 'NR == $SINK_NUM+1' | sed -e 's,.* \([0-9]\+\)%.*,\1,')

# Mute
MUTE_ICON="<fn=1>婢 </fn>"
MUTE_COLOR="#666666"
# Zero volume
ZERO_ICON="<fn=1> </fn>"
ZERO_COLOR="#A48E73"
# Low volume
LOW_ICON="<fn=1>奔 </fn>"
LOW_COLOR="#D8A364"
# Medium volume
MEDIUM_ICON="<fn=1>墳 </fn>"
MEDIUM_COLOR="#DB9036"
MEDIUM_THRES=50
# High volume
HIGH_ICON="<fn=1>  </fn>"
HIGH_COLOR="#FF8B00"
HIGH_THRES=75
# Volume boost (above 100%)
BOOST_ICON="<fn=1>  </fn>"
BOOST_COLOR="#FF5E00"

# Muted
if [[ "$MUTE_STATUS" == "yes" ]]; then
    echo "<fc=${MUTE_COLOR}> ${MUTE_ICON} mute </fc>"
# Volume = 0%
elif [[ $VOLUME == 0 ]]; then
    echo "<fc=${ZERO_COLOR}> ${ZERO_ICON} ${VOLUME}% </fc>"
# Low volume
elif [[ $VOLUME -lt $MEDIUM_THRES ]]; then
    echo "<fc=${LOW_COLOR}> ${LOW_ICON} ${VOLUME}% </fc>"
# Medium volume
elif [[ $VOLUME -lt $HIGH_THRES ]]; then
    echo "<fc=${MEDIUM_COLOR}> ${MEDIUM_ICON} ${VOLUME}% </fc>"
# High volume
elif [[ $VOLUME -lt 101 ]]; then
    echo "<fc=${HIGH_COLOR}> ${HIGH_ICON} ${VOLUME}% </fc>"
else 
    echo "<fc=${BOOST_COLOR}> ${BOOST_ICON} ${VOLUME}% </fc>"
fi
