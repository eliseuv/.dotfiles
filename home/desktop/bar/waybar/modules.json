{
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "tooltip": false,
        "critical-threshold": 60,
        "format-critical": " {temperatureC}°C",
        "format-icons": [
            " ",
            " ",
            " ",
            " ",
            " "
        ],
        "format": "{icon}{temperatureC}°C"
    },
    "pulseaudio": {
        "tooltip": false,
        "scroll-step": 5,
        "format": "{icon} {volume}%",
        "format-muted": " ",
        "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
        "format-icons": {
            "default": [
                " ",
                " ",
                " "
            ]
        }
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}  {percent}%",
        "format-icons": [
            "󰃞 ",
            "󰃟 ",
            "󰃠 "
        ]
    },
    "battery": {
        "bat": "BAT1",
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format-charging": "{icon}󱐋 {capacity}%",
        "format": "{icon} {capacity}%",
        "format-icons": [
            "󰁺",
            "󰁻",
            "󰁾",
            "󰂀",
            "󰁹"
        ],
        "max-length": 25
    },
    "disk": {
        "format": "󰆼  {percentage_used}%",
        "path": "/"
    },
    "disk#home": {
        "format": "󰋜  {percentage_used}%",
        "path": "/home/"
    },
    "privacy": {
        "icon-spacing": 10,
        "icon-size": 18,
    },
    "hyprland/language": {
        "format": "  {1}",
        "tooltip": false,
    },
    "cpu": {
        "format": "  {load:.1f}%",
        "max-length": 10,
        "interval": 5,
    },
    "memory": {
        "format": "   {used:0.1f}GB",
        "max-length": 10,
        "interval": 10,
    },
    "custom/launcher": {
        "format": " ",
        "on-click": "~/.config/rofi/bin/launcher",
        "on-click-right": "killall rofi",
        "tooltip": false,
    },
    "custom/power": {
        "format": "⏻ ",
        "tooltip": false,
        "on-click": "bash ~/.config/rofi/powermenu.sh",
        "on-click-right": "killall rofi",
    },
    "custom/weather": {
        "format": "{}°",
        "tooltip": true,
        "interval": 600,
        "exec": "~/.config/waybar/scripts/wttrbar/target/release/wttrbar --nerd --custom-indicator \"{ICON}  {temp_C}\" --location \"Porto Alegre\" --lang pt",
        "return-type": "json"
    },
    "clock": {
        "format": "  {:%R}",
        "format-alt": "  {:%A, %Y-%m-%d (%R)}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 4,
            "weeks-pos": "",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#89b4fa'><b>{}</b></span>",
                "weekdays": "<span color='#007AC9'><b>{}</b></span>",
                "days": "<span color='#bd93f9'>{}</span>",
                "today": "<span color='#f38ba8'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "hyprland/workspaces": {
        "all-outputs": true,
        "format": "{icon}",
        "tooltip": false,
        "format-icons": {
            "1": " ",
            "2": " ",
            "3": "󰖟 ",
            "4": " ",
            "5": "󰠮 ",
            "6": "󰈙 ",
            "7": "󰭹 ",
            "8": " ",
            "urgent": " ",
            "default": " "
        },
    },
    "tray": {
        "spacing": 10,
    },
    "network": {
        "format-ethernet": "󰈀   {bandwidthDownBytes}  {bandwidthUpBytes}",
        "format-wifi": "󰖩  {essid}  {bandwidthDownBytes}  {bandwidthUpBytes}",
        "format-disconnected": " ",
        "tooltip": true,
        "tooltip-format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format-wifi": "{frequency}GHz ({signalStrength}%)",
        "max-length": 50,
        "interval": 10,
    }
}
